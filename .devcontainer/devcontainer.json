{
	"name": "Node.js",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
	"forwardPorts": [5500], // Forward port 5500 from the container to the local machine
	"postCreateCommand": "npm install live-server", // Install Live Server after the container is created
	"customizations": {
	  "liveServer.settings.port": 5500 // Set the port for Live Server
	}
  }